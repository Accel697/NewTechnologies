<Page x:Class="NewTechnologies.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewTechnologies"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <Button x:Name="btnAddPartner" Content="Добавить партнера" Click="btnAddPartner_Click"/>
            <Button x:Name="btnAddRequest" Content="Добавить заявку" Click="btnAddRequest_Click"/>
        </StackPanel>

        <ListView Grid.Row="1" Name="ListViewRequest" MouseDoubleClick="ListViewRequest_MouseDoubleClick" d:ItemsSource="{d:SampleData ItemCount=1}" Margin="5">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="150"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding partner_type.title_partner_type}" FontSize="18"/>
                                    <TextBlock Text="|" FontSize="18"/>
                                    <TextBlock Text="{Binding title_partner}" FontSize="18"/>
                                </StackPanel>
                                <TextBlock Text="{Binding legal_address_partner}"/>
                                <TextBlock Text="{Binding phone_partner}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding rating_partner, StringFormat='Рейтинг: \{0}'}"/>
                                </StackPanel>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding GetCost}" FontSize="18"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
