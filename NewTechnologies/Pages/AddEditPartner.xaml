<Page x:Class="NewTechnologies.Pages.AddEditPartner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewTechnologies.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditPartner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Название:"/>
            <TextBox Name="tbTitle" Text="{Binding title_partner}"/>
            <TextBlock Text="Тип:"/>
            <ComboBox Name="cbType" SelectedValue="{Binding type_partner}"/>
            <TextBlock Text="ФИО директора:"/>
            <TextBox Name="tbDirector" Text="{Binding director_partner}"/>
            <TextBlock Text="Email:"/>
            <TextBox Name="tbEmail" Text="{Binding email_partner}"/>
            <TextBlock Text="Телефон:"/>
            <TextBox Name="tbPhone" Text="{Binding phone_partner}"/>
            <TextBlock Text="Юридический адрес:"/>
            <TextBox Name="tbLegalAddress" Text="{Binding legal_address_partner}"/>
            <TextBlock Text="ИНН:"/>
            <TextBox Name="tbInn" Text="{Binding inn_partner}"/>
            <TextBlock Text="Рейтинг:"/>
            <TextBox Name="tbRating" Text="{Binding rating_partner}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDelete" Content="Удалить" Visibility="Collapsed" Click="btnDelete_Click" Margin="10"/>
                <Button x:Name="btnSave" Content="Сохранить" Click="btnSave_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
